<% provide(:title, "Edit product") %>
<h1 class="text-center">edit the product</h1>

<div class="row">
 <div class="col-md-6 col-md-offset-3">
    <%= form_for(@product) do |f| %>
        <%= render "shared/error_messages", collection: @product, as: :item %>

        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        
        <div class="form-group">
            <%= f.label :price %>
            <%= f.text_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :body %>
            <%= f.text_field :body, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :mileage %>
            <%= f.text_field :mileage, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :engV %>
            <%= f.text_field :engV, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :engType %>
            <%= f.text_field :engType, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :registration %>
            <%= f.text_field :registration, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :year %>
            <%= f.text_field :year, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :model %>
            <%= f.text_field :model, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :drive %>
            <%= f.text_field :drive, class: "form-control" %>
        </div>
        
        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

 </div>
</div>