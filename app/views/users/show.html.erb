<% provide(:title, @user.name) %>

<div class="page-header">
  <h1>Hello, <%= current_user.name %> <small>there are all orders for
  <% if current_user?(@user) %>
  you 
  <% else %>
  <%= @user.name %>
  <% end %>
   ---- count (<%= @user.orders.count %>)</small> </h1>
</div>

<div class="row">
 <div class="col-md-12">
  <p class="lead">user email: <%= @user.email %> </p>
</div>
</div>

<div class="row">
 <div class="col-md-12">
  <% if @user.orders.any? %>
    <ol class="orders">
      <%= render @orders %>
    </ol>
    <%= will_paginate @orders %>
  <% else %>
    <h3>no order , go to the home page to buy</h3>
  <% end %>
</div> 
</div>